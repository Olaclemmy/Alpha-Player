<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:id="@+id/song_layout"
    android:layout_marginBottom=".5dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:src="@drawable/placeholder"
        android:layout_margin="4dp"
        android:id="@+id/main_song_image"
        android:transitionName="songimage"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="songtitle"
            android:textSize="13dp"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:id="@+id/main_song_title"
            android:layout_gravity="left"
            android:gravity="left"
            android:maxLines="2"
            android:ellipsize="end"
            android:transitionName="songtitle"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="songArtist"
            android:textSize="9dp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:id="@+id/main_song_artist"
            android:transitionName="songartist"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="23dp"
        android:layout_height="match_parent"
        android:src="@drawable/make_action"
        android:layout_gravity="right|center"
        android:id="@+id/main_song_action"
        />

</LinearLayout>